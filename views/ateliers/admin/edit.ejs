<% include ../../partials/head.ejs %>
<% include ../../partials/header.ejs %>
        <div class="container-fluid bg-orange p-5">
            <div class="container bg-light border-top-red p-5 ">
              
                <div class="container-fluid p-5 d-flex justify-content-center">
  <!--*****************************************-->

            <!-- SECTION CREATION ATELIER -->

            <!--*****************************************-->
                    <div class="row ">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title mb-3"> Bienvenue !
                                    <small>Editer votre atelier</small>
                                </h3>
                            </div>
                            <div class="panel-body">
                                <form role="form" action="/ateliers/admin/update/<%= data._id %>" method="POST" class="needs-validation" novalidate  enctype="multipart/form-data">
                                    <div class="form-group">    
                                        <label> Nom de votre atelier</label>
                                        <input type="text" name="titre" id="titre" class="form-control input-sm" value="<%= data.titre %>" placeholder="Nom *" required>
                                        <div class="invalid-feedback text-left">
                                            Entrez le titre de votre atelier
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label> Date prévu :</label>
                                        <input type="date" name="date" id="date" class="form-control input-sm" value="<%= data.date %>" placeholder="" required>
                                        <div class="invalid-feedback text-left">
                                            Entrez la date prévu de votre atelier
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label> Heure de début :</label>
                                        <input type="time" name="horaire" id="horaire" class="form-control input-sm"  value="<%= data.horaire %>" placeholder="Email Address *" required>
                                        <div class="invalid-feedback text-left">
                                            Entrez l'heure de début 
                                        </div>
                                    </div>
                                    <div class="form-group">                                    
                                        <label>Durée estimé en heures :</label>
                                        <input type="number" name="duree" id="duree" class="form-control input-sm" value="<%= data.duree %>" placeholder="" >
                                        <div class="invalid-feedback text-left">
                                            Entrez la durée de votre atelier
                                        </div>
                                    </div>
                                    <div class="form-group">                                    
                                        <label>Places disponible:</label>
                                        <input type="number" name="places_disponible" id="places_disponible" min="2" value="<%= data.places_disponible %>" class="form-control input-sm" placeholder="" >
                                        <div class="invalid-feedback text-left">
                                            Entrez le nombre de places disponible pour votre atelier
                                        </div>
                                    </div>
                                    <div class="form-group">                                    
                                        <label>Places reservées :</label>
                                        <input type="number" name="places_reservees" id="places_reservees" value="<%= data.places_reservees %>" class="form-control input-sm" value="0" readonly >
                                        <div class="invalid-feedback text-left">
                                            
                                        </div>
                                    </div>
                                    <div class="form-group">                                    
                                        <label>Prix</label>
                                        <input type="number" name="prix" id="prix" class="form-control input-sm" min="20" value="<%= data.prix %>" value="0" placeholder="" >
                                        <div class="invalid-feedback text-left">
                                            Entrez la durée de votre atelier
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Description de votre atelier </label>
                                        <textarea name="description" id="description" class="form-control input-sm" placeholder="" ><%= data.description %></textarea>
                                        <div class="invalid-feedback text-left">
                                            Entrez une description de votre atelier 
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Image représentant votre atelier </label>
                                        <input type="hidden" class="form-control mt-2" name="image" id="image"  value="<%= data.image %>" aria-describedby="" placeholder="http://..." required>
                                        <input type="file" class="form-control mt-2" name="file-image" value="fileupload" id="file-image">
                                        <div class="invalid-feedback text-left">
                                            Mettre une image
                                        </div>
                                    </div>
                                    <div class="form-group text-center">
                                        <label>Publier cette atelier</label>
                                        <input type="checkbox" class="form-control" name="actif" id="actif" <% if (data.actif=="on") { %> checked <% } %>>
                                    </div>
                                    <input type="hidden" class="form-control mt-2" name="_cuisinier" id="_cuisinier" aria-describedby=""value="<%= user._id %>" required>
                                    <button type="submit" value="Register" class="btn btn-danger btn-block">METTRE A JOUR</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <script>
                // Validation des champs du formulaire via JavaScript
                (function () {
                    'use strict';
                    window.addEventListener('load', function () {
                        // Fetch all the forms we want to apply custom Bootstrap validation styles to
                        var forms = document.getElementsByClassName('needs-validation');
                        // Loop over them and prevent submission
                        var validation = Array.prototype.filter.call(forms, function (form) {
                            form.addEventListener('submit', function (event) {
                                if($('#file-image').prop('files')[0].name != undefined){
                                    $('#image').val($('#file-image').prop('files')[0].name);
                                }
                                if (form.checkValidity() === false) {
                                    event.preventDefault();
                                    event.stopPropagation();
                                }
    
                                form.classList.add('was-validated');
                            }, false);
                        });
                    }, false);
                })();
            </script>
        <% include ../../partials/footer.ejs %>